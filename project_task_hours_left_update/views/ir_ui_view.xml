<?xml version='1.0' encoding='UTF-8'?>
<odoo>

    <record model="ir.ui.view" id="project_task_hour_left_update_tree">
        <field eval="True" name="active"/>
        <field type="xml" name="arch">
            <data>
                <field name="create_date"/>
                <field name="create_uid"/>
                <field name="task_id"/>
                <field name="left_to_do"/>
            </data>
        </field>
        <field name="model">project.task.hour.left.update</field>
        <field name="name">Project Task Hour Left Updates: Tree</field>
        <field name="type">tree</field>
    </record>

    <record id="project_task_hour_left_update_form" model="ir.ui.view">
        <field name="model">project.task.hour.left.update</field>
        <field name="name">Default form view for project.task.hour.left.update</field>
        <field name="arch" type="xml">
            <form string="Task Type">
                <sheet>
                    <group>
                        <field name="task_id"/>
                        <field name="left_to_do"/>
                        <field name="note"/>
                        <field name="create_date" readony="1"/>
                        <field name="create_uid" readony="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="project_task_with_latest_hour_left_update_form">
        <field type="xml" name="arch">
            <data>
                <xpath expr="//button[@name='toggle_active']" position="after">
                    <button class="oe_stat_button" type="action" icon="fa-area-chart" name="%(action_hour_left_updates_form)d">
                        <field name="hour_left_update_count" string="Hour Left Updates" widget="statinfo"/>
                    </button>
                </xpath>
                <xpath expr="//field[@name='remaining_hours']" position="after">
                    <field name="hour_left" widget="float_time"/>
                </xpath>
            </data>
        </field>
        <field name="inherit_id" ref="project.view_task_form2"/>
        <field name="model">project.task</field>
        <field name="name">Task Form: add Latest Hour Left Update</field>
        <field name="type">form</field>
    </record>
    <record model="ir.ui.view" id="project_task_with_latest_hour_left_update_tree">
        <field type="xml" name="arch">
            <data>
                <xpath expr="//field[@name='remaining_hours']" position="after">
                    <field name="hour_left" widget="float_time"/>
                </xpath>
            </data>
        </field>
        <field name="inherit_id" ref="project.view_task_tree2"/>
        <field name="model">project.task</field>
        <field name="name">Task Tree: add Latest Hour Left Update</field>
        <field name="type">tree</field>
    </record>
</odoo>
